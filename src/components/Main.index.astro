<style>
     .news{
        padding: 1.5rem;
        background-image: url(./public/img/background-5035258_1280.jpg);
        background-repeat: no-repeat;
        background-size: cover;
        background-attachment: fixed;
    }
    .news-publicaciones{
        width: 50rem;
        height: 5rem;
        background: rgba(51, 39, 39, 0.52);
        border-radius: 16px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(7.3px);
        -webkit-backdrop-filter: blur(7.3px);
        border: 1px solid rgba(51, 39, 39, 0.3);
        align-items: center;
