        width: 1.5rem;
        height: 1.5rem;
    }
    .news-caja{
        width: 50rem;
        height: 20rem;
        background: rgba(51, 39, 39, 0.52);
        border-radius: 16px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(7.3px);
        -webkit-backdrop-filter: blur(7.3px);
        border: 1px solid rgba(51, 39, 39, 0.3);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 1rem;
    }
    .icono{
        width: 5rem;
    }
