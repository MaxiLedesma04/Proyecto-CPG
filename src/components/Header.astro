---
interface Props {
    baner: string;
    imagenBaner: string;
    fotoPerfil: string;
}
const { baner } = Astro.props;
const {imagenBaner} = Astro.props;
const {fotoPerfil} = Astro.props;
---
<section class="header bg-black p-3">
    <div class="fotoPerfil border rounded-full bg-white ">{fotoPerfil}</div>
    <div class="hero">
        <img class="logo" src={imagenBaner} />
        <p>{baner}</p>
    </div>    
</section>

<style>
    @import url("https://fonts.cdnfonts.com/css/thegoodmonolith");
    @media screen and (min-width: 320px) {
    .header {
        width: 100%;
        display: flex;
        justify-content: center;
    }
    .hero {
        display: flex;
        flex-direction: column;
        align-items: center;
        font-family: "Pulsar Class Solid", sans-serif;
        text-align: center;
        font-size: 1.5rem;
        color: aliceblue;
    }
    .logo{
        width: 90%;
        height: 6rem;
    }    
    }
    @media screen and (min-width: 1023px){
        .logo{
            width: 100%;
            height: 3rem;
        }
        .fotoPerfil{
            width: 6rem;
            height: 6rem;
            transform: translateX(-20rem);
            border-color: aliceblue;
            /* background-image: imagenBaner="./public/img/programador-Freepik.png"; */
        }

    }
    
</style>
